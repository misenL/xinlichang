/* pages/login/index.wxss */
.container {
  overflow-y: hidden;
}
page {
  overflow-y: hidden;

}
.login__content {
  overflow-y: hidden;
  background: rgba(255, 255, 255, 1);
  position: absolute;
  bottom: 0;
  height: 75vh;
  width: 100vw;
  border-top-left-radius: 16px;
  border-top-right-radius: 16px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
image {
  width: 144px;
  height: 144px;
}
.weChat__login,
.phone__login {
  width: 335px;
  height: 48px;
  font-size: 18px;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 4px;
}
.weChat__login {
  background: rgba(70, 175, 53, 1);
  color: rgba(255, 255, 255, 1);
  margin-bottom: 15px;
}
.phone__login {
  background: rgba(255, 202, 75, 1);
  color: rgba(139, 87, 42, 1);
  margin-bottom: 24px;
}
.weChat__login image,
.phone__login image {
  width: 28px;
  height: 28px;
  margin-right: 8px;
}
.login__agree {
  font-size: 13px;
  color: rgba(0, 0, 0, 0.65);
}

.xieyi {
  height: 50vh;
  overflow-y: auto;
}
.font-size-20 {
  font-size: 20px
}
font-size-14 {
  font-size: 14px
}
.font-size-12 {
  font-size: 12px
}
.font-weight-600 {
  font-weight: 600
}

.login__info {
  display: block;
  margin-top: 10px;
  padding: 0 15px;
  font-size: 13px;
}