.container {
  background: rgba(240, 245, 251, 1)
}
.host-city{
    display: flex;
    padding: 0 30rpx;
    display: -webkit-flex;
    flex-direction: row;
    flex-wrap: wrap;
}
.host-city view{
    background: #ffffff;
    width:70px;
    height:32px;
    margin-right: 16px;
    text-align: center;
    font-size:14px;
    line-height: 32px;
    margin-bottom: 12px;
}
page,.city-page{
    width: 100%;
    height: 100%;
    overflow: hidden;
}
.city-scrollView{
    width: 100%;
    height: 100%;
}
.city-item{
    width: 100%;
}
.city-sub-location{
    align-items: center;
}
.city-sub-item{
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    padding: 0 30rpx;
    box-sizing: border-box;
    border-bottom: 1px solid #f5f4f3;
    font-size: 14px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.location-image{
    width: 38rpx;
    height: 38rpx;
    margin-right: 20rpx;
}
.city-sub-text{
    color: rgba(0, 0, 0, 1);
    /* font-weight: bold; */
    display: block;
    margin-left: 36rpx;
}
.city-text{
    background: #fff;
}
.city-py{
    /* background: #e8e8e8; */
}
.city-py-label{
    width: 100rpx;
    height: 80%;
    position: absolute;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    top: 24%;
    right: 0;
}
.city-py-label>view{
    text-align: center;
    height: 20px;
    line-height: 20px;
}
.city-single-py{
    position: absolute;
    width: 145rpx;
    height: 145rpx;
    justify-content: center;
    align-items: center;
    z-index: 2;
    top: 50%;
    left: 50%;
    transform: translate3d(-50%,-50%,0);
}
.city-single-py>view{
    width: 140rpx;
    height: 140rpx;
    border-radius: 5rpx;
    background: #fff;
    text-align: center;
    line-height: 140rpx;
    color: #333;
    font-weight: bold;
    font-size: 40rpx;
    border: 1px solid #f5f4f3;
}