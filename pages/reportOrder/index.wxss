.order__num {
  font-size: 14px;
  padding: 10px 16px
}
.order__num,
.order__block {
  background: rgba(255, 255, 255, 1);
  margin-bottom: 8px;
}
.block__title {
  color: rgba(231, 76, 60, 1);
  font-size: 12px;
  padding: 22px 16px 5px 16px;
}
.block__title text {
  margin-right: 8px
}
.order__block textarea {
  padding: 5px 16px;
  height: 100px;
  font-size: 14px;
}
.order__confirm {
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 202, 75, 1);
  color: rgba(139, 87, 42, 1);
  width: 342px;
  height: 48px;
  border-radius: 4px;
  margin: 24px auto 0;
}