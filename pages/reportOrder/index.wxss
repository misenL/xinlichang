/* pages/reportOrder/index.wxss */

.van-field__icon-container {
  display: flex;
}

.container {
  background: rgba(240, 245, 251, 1)
}
.font__color-grey {
  color: rgba(0, 0, 0, 0.45)
}
.font__h1 {
  color: rgba(0, 0, 0, 1);
  font-size: 18px
}
.picker {
  padding: 0 16px;
  margin: 20px 0 0;
  font-size: 14px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.picker view {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  color: rgba(0, 0, 0, 0.45)
}
