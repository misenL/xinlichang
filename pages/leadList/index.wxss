/* pages/leadList/index.wxss */
.container {
    padding-bottom: 20px;
    background: #F0F5FB;
}

.customer_li {
    padding: 0px 16px 16px 16px;
    box-sizing: border-box;
    margin-top: 8px;
    background: #fff;
}

.customer_id {
    height: 48px;
    margin-bottom: 9px;
    display: flex;
    align-items: center;
    font-size: 14px;
    color: #000000;
    border-bottom: 1px solid #eee;
}

.id_title {
    color: #86888B;
}

.user_info {
    height: 84px;
    padding-left: 16px;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    background: rgba(0, 0, 0, 0.03);
    border-radius: 8px;
    border: 1px solid rgba(0, 0, 0, 0.05);
}

.info_box {
    margin-left: 16px;
}

.user_name {
    margin-bottom: 8px;
    font-size: 16px;
    color: #000000;
}

.native_place {
    display: flex;
    align-items: center;
    font-size: 12px;
    color: rgba(0, 0, 0, 0.65);
}

.box_left {
    margin-right: 8px;
}

.phone {
    color: #007AFF;
}

.properties {
    /* height: 200px; */
    /* padding-bottom: 10px;
    box-sizing: border-box; */
}

.properties_head {
    margin-top: 10px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 14px;
    color: rgba(0, 0, 0, 0.45);
}

.properties_title {
    display: flex;
    align-items: center;
}

.moren {
    margin-top: 10px;
    font-size: 14px;
    color: rgba(0, 0, 0, 1);
}

.content_close {
    /* max-height: 65px; */
    height: 65px;
    overflow: hidden;
    transition: height .4s;
}

.properties_content {
    /* max-height: 500px; */
    transition: height .4s;
}


.properties_li {
    /* margin-bottom: 7px; */
    display: flex;
    align-items: center;
}

.arrow_start {
    transition: transform 0.4s;
}

.arrow_end {
    transition: transform 0.4s;
    transform: rotate(180deg);
}

.browse_time {
    margin-top: 8px;
    font-size: 14px;
}

.box_left {
    color: rgba(0, 0, 0, 0.45);
}

.retention_time {
    display: flex;
    align-items: center;
}

.contact {
    margin-left: 8px;
}

.noData {
    margin-top: 10px;
    font-size: 14px;
    color: #333;
    text-align: center;
}