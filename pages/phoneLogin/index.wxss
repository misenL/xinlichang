/* pages/phoneLogin/index.wxss */

.container {
  background: #ffffff;
}
.login__content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  padding-top: 25px;
}
.login__title {
  font-size: 20px;
  padding-left: 15px;
  margin-bottom: 20px;
}
.login__button {
  width: 342px;
  height: 48px;
  background: rgba(255, 202, 75, 1);
  color: rgba(139, 87, 42, 1);
  font-size: 18px;
  text-align: center;
  line-height: 48px;
  border-radius: 4px;
  align-self: center;
  margin-top: 25px;
}
.get__verify {
  color: rgba(139, 87, 42, 1);
  font-size: 14px;
  display: block;
  width: 140rpx;
}
.verify__time {
  background-color: rgb(233, 233, 233);
  color: rgba(139, 87, 42, 1);
  font-size: 14px;
  display: block;
  width: 140rpx;
  text-align: center;
}