/**index.wxss**/
/* 制定样式 */
.van-search__content {
  border-radius: 8px !important
}

van-dropdown-menu {
  display: block;
  width: 100vw;
  background: #ffffff;
}

.van-dropdown-menu {
  width: 80vw;
}

.van-sidebar-item--selected {
  border-color: #ffffff !important;
  color: #8B572A !important;
}

.van-sidebar-item__text {
  margin-left: 15px;
}

.van-checkbox__icon--checked {
  color: #8B572A !important;
}

.city__right van-checkbox {
  height: 35px;
  display: flex;
  align-items: flex-end;
  margin-top: 5px
}

.van-checkbox__label {
  font-size: 14px !important;
}

.van-tree-select__content {
  padding-bottom: 20px;
}

.van-tree-select__item {
  font-weight: 500 !important;
}

.van-tree-select__item--active {
  color: rgba(139, 87, 42, 1) !important;
}

/* end */
.drop-button-style {
  border: 1px solid #8B572A !important;
  color: #8B572A !important;
}

/* 下拉框地下两个按钮 */
.dropdown__button {
  background: #fff;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 12px 0
}

.dropdown__button view {
  border: 1px solid rgba(139, 87, 42, 0.65);
  border-radius: 5px;
  color: rgba(116, 69, 28, 1);
  width: 162px;
  height: 40px;
  text-align: center;
  line-height: 40px;
  font-size: 16px;
}

.dropdown__button-one {
  background: rgba(255, 199, 69, 0.15)
}

.dropdown__button-two {
  background: rgba(243, 156, 18, 0.45)
}

.van-checkbox__icon-wrap {
  /* position: fixed;
  right: 12vw; */
}

.van-tree-select__nav {
  flex: none !important;
}

.van-tree-select scroll-view {
  width: 25% !important;
}

/* end */
.nav {
  /* width: 749rpx; */
  width: 100%;
  height: 196rpx;
  padding: 0rpx 64rpx;
  box-sizing: border-box;
  /* border: 1rpx solid red; */
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.icon__one,
.icon__two {
  font-size: 13px;
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  justify-items: center;
  align-items: center;
}

/* 房贷在这里 */
.icon__one {
  margin: 5px 16px 12px;
  grid-template-columns: repeat(auto, 1fr) !important;
}

.icon__li {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.icon__one image {
  width: 48px;
  height: 48px;
  margin-bottom: 2px;
}

.icon__two {
  margin-bottom: 16px;
}

.icon__two image {
  width: 45px;
  height: 45px;
  margin-bottom: 8px;
}

.main {
  background: #F0F5FB;
  border-radius: 32rpx 32rpx 0rpx 0rpx;
  overflow-x: hidden;
}

.banner_box {
  margin-bottom: 16rpx;
  padding: 32rpx;
  box-sizing: border-box;
  background: #fff;
  border-radius: 32rpx 32rpx 0rpx 0rpx;
}

.main swiper-item {
  border-radius: 8px;
  max-height: 210px;
}

.swiper{
  height: 210px;
}

.banner image {
  width: 100%;
  height: 100%;
  object-fit: fill;
}

.titel_list {
  margin-bottom: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0rpx 44rpx;
  box-sizing: border-box;
}

.imag {
  width: 88rpx;
  height: 88rpx;
  margin-bottom: 16rpx;
  border: 1rpx solid red;
  border-radius: 50%;
}

.list_item>text {
  font-size: 24rpx;
}

.approval {
  background: #ffffff;
  padding: 20px 16px;
  margin-bottom: 8px;
}

.approval__top {
  color: rgba(0, 0, 0, 1);
  font-size: 18px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.approval__arrow {
  color: rgba(0, 0, 0, 0.65);
  font-size: 13px;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.approval__center {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #ffffff;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  width: 100%;
  height: 60px;
  border-radius: 8px;
  margin-top: 8px;
}

.approval__center image {
  width: 38px;
  height: 38px;
  margin: 0 16px;
}

.center__text {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  font-size: 13px;
  margin-right: auto;
}

.center__button {
  width: 86px;
  height: 28px;
  border-radius: 28px;
  color: rgba(139, 87, 42, 1);
  font-size: 12px;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 16px;
}

.content {
  /* height: 2000rpx; */
  padding-top: 32rpx;
  box-sizing: border-box;
  background: #fff;
}

.content_titel {
  margin-bottom: 16rpx;
  padding-left: 32rpx;
  box-sizing: border-box;
  font-size: 36rpx;
  color: #000000;
}

/* 区域样式 */
.city__sidebar .van-sidebar {
  width: 100vw !important;
  /* border-top: 1px solid rgba(0, 0, 0, 0.1); */
  display: grid;
  grid-template-columns: 1fr 1.5fr 2fr;
}

.city__left,
.city__right {
  margin: 5px;
  height: 250px;
  overflow-y: auto;
  /* overflow-y: scroll; */
}

.city__left {
  margin-left: 20px;
}

.city__left text,
.city__right text {
  display: block;
  font-size: 14px !important;
  color: rgba(0, 0, 0, 0.85);
}

.city__click-color,
.city__click-color .van-checkbox__label {
  color: rgba(139, 87, 42, 1) !important;
}

.city__right {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}

/* 户型样式 and 更多下拉样式 */
.drop__house,
.li__content {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  align-items: center;
  justify-items: center;
  padding: 0 10px 15px;
  grid-row-gap: 15px;
}

.drop__house text,
.li__content text {
  color: rgba(0, 0, 0, 0.85);
  font-size: 14px;
  display: block;
  border: 1px solid rgba(215, 215, 215, 1);
  border-radius: 4px;
  height: 36px;
  width: 75px;
  text-align: center;
  line-height: 12px;
}

/* 更多下拉 */
.li__title {
  font-size: 14px;
  color: rgba(0, 0, 0, 1);
  padding: 0 15px;
  margin-bottom: 10px;
}

.li__content text {
  font-size: 12px;
}

.build__list {
  padding-bottom: 10px;
  min-height: 70vh;
}

.none__image {
  width: 100vw;
  height: 70vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 48px;
  padding-bottom: 50px;
}

.none__image image {
  width: 96px;
  height: 96px;
}

.none__image text {
  color: rgba(0, 0, 0, 0.65);
  font-size: 13px;
}