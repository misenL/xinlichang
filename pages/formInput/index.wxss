/* pages/reportOrder/index.wxss */

.van-field__icon-container {
  display: flex;
}
.van-action-sheet {
  max-height: 50vh!important;
}
.van-uploader {
  margin: 0 16px;
}
.van-uploader image {
  margin-right: 5px;
}
.container {
  background: rgba(240, 245, 251, 1)
}
.font__color-grey {
  color: rgba(0, 0, 0, 0.45)
}
.font__h1 {
  color: rgba(0, 0, 0, 1);
  font-size: 18px
}
picker {
  margin: 0 16px;
  border-bottom: 1px solid #ebedf090;
}
.picker {
  padding: 10px 0;
  font-size: 14px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.picker view {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  color: rgba(0, 0, 0, 0.45)
}
.list__huose {
  padding: 0 16px;
}
.list__huose view {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 14px;
  border-bottom: 1px solid #ebedf090;
  color: #333;
  padding: 5px 0;
}
.house__choose {
  padding: 5px 10px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 14px;
}
.house__choose image,
.list__huose image {
  width: 28px;
  height: 28px;
}
.order__num {
  font-size: 14px;
  padding: 10px 16px
}
.order__num,
.order__block {
  background: rgba(255, 255, 255, 1);
  margin-bottom: 8px;
}
.block__title {
  color: rgba(231, 76, 60, 1);
  font-size: 12px;
  padding: 22px 16px 5px 16px;
}
.block__title text {
  margin-right: 8px
}
.order__block textarea {
  padding: 5px 16px;
  height: 100px;
  font-size: 14px;
}
.order__confirm {
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 202, 75, 1);
  color: rgba(139, 87, 42, 1);
  width: 342px;
  height: 48px;
  border-radius: 4px;
  margin: 24px auto 20px;
}
.list__huose {
  font-size: 14px;
}